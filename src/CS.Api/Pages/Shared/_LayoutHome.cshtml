@using CS.Api
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/fontawesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/solid.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/animated_menu.css")" asp-append-version="true"/>
    <link rel="stylesheet" href="@Url.Content("~/css/botao.css")" asp-append-version="true"/>
    <link rel="stylesheet" href="@Url.Content("~/css/modal.css")" asp-append-version="true"/>
    <link rel="stylesheet" href="@Url.Content("~/css/principal.css")" asp-append-version="true"/>
    <link rel="stylesheet" href="@Url.Content("~/css/grid.css")" asp-append-version="true"/>
    <link rel="stylesheet" href="@Url.Content("~/css/ThirdParty/datepicker-bs4.css")" asp-append-version="true"/>
	<script src="@Url.Content("~/js/functions.js")"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/vanilla-masker@1.2.0/build/vanilla-masker.min.js"></script>
    <script src="@Url.Content("~/js/modais.js")"></script>
    <script src="@Url.Content("~/js/Grid.js")"></script>
	<script src="@Url.Content("~/js/Pesquisa.js")"></script>
    <script src="@Url.Content("~/js/ThirdParty/datepicker-full.js")"></script>
    <script src="@Url.Content("~/js/ThirdParty/datepicker-pt-BR.js")"></script>
    <title>Título</title>
</head>
<body>
    <div class="container-fluid main-container">
		<nav class="navbar navbar-expand-lg navbar-light bg-white">
			<div class="container-fluid">
				<a class="navbar-brand me-5" href="#">
					<img src="@Url.Content("~/img/logo.jpg")" class="img-responsiver" style="max-width: 200px; height: 3rem;" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavDropdown">
					<ul class="navbar-nav">
						@if(User.ObtenhaPerfil() == "admin" || User.ObtenhaPerfil() == "professor")
						{
							<li class="nav-item dropdown me-3">
								<a class="nav-link dropdown-toggle" href="#" id="dropdownCadastros" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i style="color: var(--bs-green); font-size: 12pt;" class="fa fa-circle-plus me-2"></i>Cadastro
								</a>
								<ul class="dropdown-menu" aria-labelledby="dropdownCadastro">
									@if(User.ObtenhaPerfil() == "admin")
									{
										<li>
											<a class="dropdown-item" href="/Cadastro/Aluno">Aluno</a>
										</li>
										<li>
											<a class="dropdown-item" href="/Cadastro/Professor">Professor</a>
										</li>
									}
									<li>
										<a class="dropdown-item" href="/Cadastro/Exercicio">Exercício</a>
									</li>
									<li>
										<a class="dropdown-item" href="/Cadastro/Treino">Treino</a>
									</li>
								</ul>
							</li>
						}
						@if(User.ObtenhaPerfil() == "aluno")
						{
							<li class="nav-item dropdown me-3">
								<a class="nav-link dropdown-toggle" href="#" id="dropdownVisualizarTreino" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i style="color: var(--bs-body-color); font-size: 12pt;" class="fa fa-dumbbell me-2"></i>Treino
								</a>
								<ul class="dropdown-menu" aria-labelledby="dropdownVisualizarTreino">
									<li>
										<a class="dropdown-item" href="/Treino/VisualizarTreino">Visualizar treino</a>
									</li>
								</ul>
							</li>
						}
					</ul>
				</div>
				<div class="d-flex flex-column justify-content-end pe-4 dados-usuario">
					<div>
						<i class="fa fa-user me-2"></i><span>Nome do usuário</span>
					</div>
					<a id="sair" style="padding: 0;" class="nav-link link-sair mt-1" href="/Sair"><i style="margin-left: 3rem;" class="fa fa-sign-out me-2"></i>Sair</a>
				</div>
			</div>
		</nav>		
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
</body>
</html>
